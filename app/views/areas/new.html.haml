= form_for @area, url: region_areas_path(@region.id) do |f|
  .form-group
    .col-sm-2.control-label
      = f.label :name, 'Имя:'
    .col-sm-6
      = f.text_field :name, class: 'form-control'
  .form-group
    .col-sm-12
      = f.submit 'Создать'
      = link_to 'Назад', :back, class: 'btn btn-default'
